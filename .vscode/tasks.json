{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend",
			"type": "shell",
			"command": "mvn",
			"args": [
				"spring-boot:run"
			],
			"options": {
				"cwd": "${workspaceFolder}/pet-store-api"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"options": {
				"cwd": "${workspaceFolder}/pet-store-frontend"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build Backend",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"package",
				"-DskipTests"
			],
			"options": {
				"cwd": "${workspaceFolder}/pet-store-api"
			},
			"group": "build"
		},
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/pet-store-frontend"
			},
			"group": "build"
		},
		{
			"label": "Start Docker Services",
			"type": "shell",
			"command": "docker-compose",
			"args": [
				"up",
				"-d"
			],
			"options": {
				"cwd": "${workspaceFolder}/docker"
			},
			"group": "build"
		}
	]
}